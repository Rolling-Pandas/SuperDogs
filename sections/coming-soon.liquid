{{ 'section-coming-soon.css' | asset_url | stylesheet_tag }}

<div class="coming-soon-section">
  <div class="container-large">
    <div class="coming-soon-grid">
      <div class="coming-soon-left">
        <div class="coming-soon-logo">
          <img
            src="{% if section.settings.top_logo != blank %}{{ section.settings.top_logo | image_url: width: 200 }}{% else %}https://cdn.shopify.com/s/files/1/0959/1727/7525/files/logo-sd_1_1_1.png?v=1753809833{% endif %}"
            alt="{{ section.settings.top_logo.alt | escape }}"
          >
        </div>

        <div>
          {% if section.settings.subheading %}
            <p class="custom-subheading text-align--center">{{ section.settings.subheading }}</p>
          {% endif %}
          {% if section.settings.heading %}
            <h2 class="h2-custom text-align--center">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.description %}
            <p class="p-md text-align--center">{{ section.settings.description }}</p>
          {% endif %}
        </div>

        <div class="coming-soon-form-wrapper">
          {% form 'customer', id: 'coming-soon-newsletter' %}
            <input type="hidden" name="contact[tags]" value="newsletter">

            <div class="input-wrapper">
              <label class="form-label" for="NewsletterName">Вашето име*</label>
              <input name="contact[first_name]" id="NewsletterName" type="text" class="form-input" required>
            </div>

            <div class="input-wrapper">
              <label class="form-label" for="NewsletterEmail">Имейл*</label>
              <input
                placeholder="email@example.com"
                name="contact[email]"
                id="NewsletterEmail"
                type="email"
                class="form-input"
                required
              >
            </div>

            <button class="submit-button" type="submit">
              Абонирай се
